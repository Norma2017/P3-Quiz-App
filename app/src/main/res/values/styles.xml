<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/rbmt</item>
        <item name="android:paddingRight">@dimen/rbpr4</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextViewStyle">
        <item name="android:layout_width">@dimen/tvlw</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/tvmt</item>
        <item name="android:layout_marginLeft">@dimen/tvml</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Blck</item>
    </style>

    <style name="CustomRadioGroupStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="CustomTextViewStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Blck</item>
        <item name="android:layout_marginLeft">@dimen/tvml</item>
        <item name="android:layout_marginRight">@dimen/tvmr</item>
    </style>
    
    <style name="CustomCheckBox">
        <item name="android:layout_width">180dp</item>c
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/Blck</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
